# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Savory Restaurant"

# Database Configuration (when you add a database)
# DATABASE_URL=postgresql://user:password@localhost:5432/restaurant_db

# Authentication (when you add auth)
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your-secret-key-here

# Payment Gateway (when you add payments)
# STRIPE_PUBLIC_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...

# Email Service (when you add email)
# SENDGRID_API_KEY=your-sendgrid-api-key
# EMAIL_FROM=noreply@yourrestaurant.com

# SMS Notifications (when you add SMS)
# TWILIO_ACCOUNT_SID=your-twilio-sid
# TWILIO_AUTH_TOKEN=your-twilio-token
# TWILIO_PHONE_NUMBER=+1234567890

# Analytics (optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# CMS Integration (when you add a CMS)
# SANITY_PROJECT_ID=your-project-id
# SANITY_DATASET=production
# SANITY_API_TOKEN=your-api-token

# E-commerce Platform (when you add e-commerce)
# MEDUSA_BACKEND_URL=http://localhost:9000
# MEDUSA_API_KEY=your-api-key